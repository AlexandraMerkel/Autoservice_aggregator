%p#notice= notice

%p
  %b
    = Service.human_attribute_name(:service_name) + ":"
  = @service.service_name
%p
  %b
    = Service.human_attribute_name(:service_type) + ":"
  = service_types(@service.service_type)
%p
  %b
    = Service.human_attribute_name(:service_address) + ":"
  = @service.service_address
%p
  %b
    = Service.human_attribute_name(:service_phonenumber) + ":"
  = number_to_phone(@service.service_phonenumber, pattern: /(\d{1,1})(\d{3})(\d{4})$/)
%p
  %b
  - @service.pictures.each do |picture|
    = image_tag(picture.image.url(:medium))

/= link_to t('helpers.back'), services_index_path